<h1>Signup to Facespace</h1>


<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well well-sm">
			<%= form_for User.new, url: '/signup' do |f| %>
				<fieldset>
					<div class="form-group col-xs-12 col-sm-6 col-md-11">
						<label class="col-md-3 control-label" for="name"><%= f.label :email %></label>
						<div class="col-md-9"><%= f.email_field :email %></div>
					</div>
					<div class="form-group col-xs-12 col-sm-6 col-md-11">
						<label class="col-md-3 control-label" for="name"><%= f.label :name %></label>
						<div class="col-md-9"><%= f.text_field :name %></div>
					</div>				
					<div class="form-group col-xs-12 col-sm-6 col-md-11">
						<label class="col-md-3 control-label" for="name"><%= f.label :bio %></label>
						<div class="col-md-9"><%= f.text_area :bio %></div>
					</div>	
					<div class="form-group col-xs-12 col-sm-6 col-md-11">
						<label class="col-md-3 control-label" for="name"><%= f.label :password %></label>
						<div class="col-md-9"><%= f.password_field :password %></div>
					</div>
					<div class="form-group col-xs-12 col-sm-6 col-md-11">
						<label class="col-md-3 control-label" for="name"><%= f.label :password_confirmation %></label>
						<div class="col-md-9"><%= f.password_field :password_confirmation %></div>
					</div>
					<div class="form-group">
					  <div class="col-md-12">
						  <%= f.submit "Signup", class: "btn btn-large btn-primary" %>
					  </div>
					</div>
				</fieldset>				
			<% end %>
		</div>
	</div>
</div>

